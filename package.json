{
  "name": "glsl-viewer",
  "displayName": "glsl-viewer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "glsl-viewer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "glsl-viewer.preview",
        "title": "Preview Shader"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm compile-tests && pnpm compile && pnpm lint",
    "lint": "biome check .",
    "format": "biome check --write .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vscode": "^1.1.37",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
